		{
			"name": "Negotiate",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Retrieve agreement ID\", function () {\r",
							"    var jsonData = pm.response.json();\r",
							"    var agreementLong = jsonData[\"_links\"][\"artifacts\"][\"href\"]\r",
							"    var agreementId = agreementLong.replace(\"http://localhost:8081\", \"\").replace(\"/api/agreements/\", \"\").replace(\"/artifacts{?page,size}\", \"\")\r",
							"pm.environment.get(\"variable_key\");\r",
							"    console.log(agreementLong,agreementId)\r",
							"    pm.collectionVariables.set(\"agreement\", agreementId)\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {}
			},
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "[ {\r\n        \"@type\" : \"ids:Permission\",\r\n        \"@id\" : \"http://provider:8080/api/rules/5041c3e5-4933-419d-87d9-474b98ced678\",\r\n        \"ids:description\" : [ {\r\n          \"@value\" : \"provide-access\",\r\n          \"@type\" : \"http://www.w3.org/2001/XMLSchema#string\"\r\n        } ],\r\n        \"ids:title\" : [ {\r\n          \"@value\" : \"Example Usage Policy\",\r\n          \"@type\" : \"http://www.w3.org/2001/XMLSchema#string\"\r\n        } ],\r\n        \"ids:action\" : [ {\r\n          \"@id\" : \"https://w3id.org/idsa/code/USE\"\r\n        }],\r\n        \"ids:target\" : \"{{artifact}}\"\r\n} ]",
